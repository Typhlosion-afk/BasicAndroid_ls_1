<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemePurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_500</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/purple_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_700</item>
        <!-- Customize your theme here. -->
        <item name="textBackground">@color/green</item>
        <item name="colorButtonNormal">@color/purple_500</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="ThemeGreen" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/green_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/blue_light</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:textColor">@color/green</item>
        <item name="textBackground">@color/purple_500</item>
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:gravity">center</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_dark</item>
        <!-- Customize your theme here. -->
    </style>

</resources>